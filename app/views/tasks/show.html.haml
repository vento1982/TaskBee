.row
	.col-md-10.col-md-offset-1
		%h1= @task.name
		%p= @task.description
		%p= @task.company
		%p= @task.url

		%button.btn.btn-default= link_to "Complete Task", @task.url
		
		.btn-group	
			= link_to "Home", root_path, class: "btn btn-default btn-xs"
			= link_to "Edit", edit_task_path(@task), class: "btn btn-primary btn-xs"
			= link_to "Delete", task_path(@task), method: :delete, data: {confirm: "Are You sure?"}, class: "btn btn-danger btn-xs"